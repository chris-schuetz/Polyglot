<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Polyglot.AvaloniaApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hotKeyControls="clr-namespace:Preferences.Avalonia.Controls;assembly=Preferences.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Polyglot.AvaloniaApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Polyglot.AvaloniaApp"
        MinHeight="600" MinWidth="800">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid>
        <!-- Main content -->
        <Grid Name="MainContent">
            <DockPanel>
                <hotKeyControls:HotKeyMenu DockPanel.Dock="Top">
                    <MenuItem Header="_File" IsVisible="True">
                        <MenuItem Header="_Preferences..." InputGesture="{Binding OpenPreferencesGesture}"
                                  Command="{Binding OpenPreferencesDialog}" />
                        <MenuItem Header="_Hot Keys..." InputGesture="{Binding ShowHotKeysGesture}"
                                  Command="{Binding OpenHotKeysDialog}" />
                        <Separator />
                        <MenuItem Header="_Exit" InputGesture="{Binding ExitApplicationGesture}"
                                  Command="{Binding ExecuteExitApplication}" />
                    </MenuItem>
                    <MenuItem Header="" IsVisible="False">
                        <MenuItem Header="Motion Back" InputGesture="{Binding MotionBackGesture}"
                                  Command="{Binding MotionBackCommand}" />
                        <MenuItem Header="Motion Left" InputGesture="{Binding MotionLeftGesture}"
                                  Command="{Binding MotionLeftCommand}" />
                        <MenuItem Header="Motion Right" InputGesture="{Binding MotionRightGesture}"
                                  Command="{Binding MotionRightCommand}" />
                        <MenuItem Header="Motion Up" InputGesture="{Binding MotionUpGesture}"
                                  Command="{Binding MotionUpCommand}" />
                        <MenuItem Header="Motion Down" InputGesture="{Binding MotionDownGesture}"
                                  Command="{Binding MotionDownCommand}" />
                        <MenuItem Header="Motion Select" InputGesture="{Binding MotionSelectGesture}"
                                  Command="{Binding MotionSelectCommand}" />
                    </MenuItem>
                </hotKeyControls:HotKeyMenu>
                <Grid ColumnDefinitions="2*,3*,5*" Margin="8">
                    <!-- Column 1: Devices -->
                    <StackPanel Grid.Column="0" Spacing="4">
                        <TextBlock Text="Devices" FontWeight="Bold" Margin="0,0,0,4" />
                        <ListBox ItemsSource="{Binding Workspace.Devices}"
                                 SelectedItem="{Binding Workspace.SelectedDevice, Mode=TwoWay}"
                                 DisplayMemberBinding="{Binding DeviceName}" />
                    </StackPanel>

                    <!-- Column 2: Templates and Runs of selected device -->
                    <StackPanel Grid.Column="1" Spacing="8" Margin="8,0">
                        <StackPanel Spacing="4">
                            <TextBlock Text="Configuration" FontWeight="Bold" />
                            <Border BorderBrush="Gray" BorderThickness="1" Padding="8">
                                <TextBlock Text="{Binding Workspace.SelectedDevice.ConfigurationName}" />
                            </Border>
                        </StackPanel>
                        <StackPanel Spacing="4">
                            <TextBlock Text="Templates" FontWeight="Bold" />
                            <ListBox ItemsSource="{Binding Workspace.Templates}"
                                     SelectedItem="{Binding Workspace.SelectedTemplate, Mode=TwoWay}"
                                     DisplayMemberBinding="{Binding Text}" />
                        </StackPanel>
                        <StackPanel Spacing="4">
                            <TextBlock Text="Runs" FontWeight="Bold" />
                            <ListBox ItemsSource="{Binding Workspace.Runs}"
                                     SelectedItem="{Binding Workspace.SelectedRun, Mode=TwoWay}"
                                     DisplayMemberBinding="{Binding Display}" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Column 3: Detail view -->
                    <ContentControl Grid.Column="2" Content="{Binding Workspace.SelectedDetail}">
                        <ContentControl.DataTemplates>
                            <!-- Empty detail templates for now -->
                            <DataTemplate DataType="vm:MessageViewModel">
                                <Border BorderBrush="Gray" BorderThickness="1" Padding="8">
                                    <StackPanel>
                                        <!-- Intentionally left blank for Template details -->
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                            <DataTemplate DataType="vm:RunViewModel">
                                <Border BorderBrush="Gray" BorderThickness="1" Padding="8">
                                    <StackPanel>
                                        <!-- Intentionally left blank for Run details -->
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ContentControl.DataTemplates>
                    </ContentControl>
                </Grid>
            </DockPanel>
        </Grid>

        <!-- Overlay container -->
        <Grid Name="OverlayContainer"
              Background="#80000000"
              IsVisible="False"
              ZIndex="1000" />
    </Grid>

</Window>
